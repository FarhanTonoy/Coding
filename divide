#include <stdio.h>
//divide of two varriables
int main() {
    int numerator, denominator;
    float result;

    // Input values
    printf("Enter numerator: ");
    scanf("%d", &numerator);
    printf("Enter denominator: ");
    scanf("%d", &denominator);

    // Check for division by zero
    if (denominator == 0) {
        printf("Error: Division by zero is not allowed.\n");
    } else {
        result = (float)numerator / denominator; // Perform division
        printf("Result: %.2f\n", result);
    }

    return 0;
}
